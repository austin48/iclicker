<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <!-- define the list of HBM mapping files -->
    <bean id="org.sakaiproject.iclicker.HBMMappingList" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <value>org/sakaiproject/iclicker/dao/hbm/ClickerRegistration.hbm.xml</value>
                <value>org/sakaiproject/iclicker/dao/hbm/ClickerLock.hbm.xml</value>
                <value>org/sakaiproject/iclicker/dao/hbm/ClickerUserKey.hbm.xml</value>
            </list>
        </constructor-arg>
    </bean>

<!-- This is the DAO and the bean config wraps it so that the transactions are managed -->
<bean id="org.sakaiproject.iclicker.api.dao.IClickerDao" class="org.sakaiproject.genericdao.springutil.CurrentClassLoaderTxProxyFactoryBean">
    <property name="transactionManager" ref="org.sakaiproject.iclicker.hibernate.TransactionManager" />
    <property name="target">
        <bean class="org.sakaiproject.iclicker.impl.dao.IClickerDaoImpl" init-method="init">
            <property name="sessionFactory" ref="org.sakaiproject.iclicker.hibernate.SessionFactory" />
            <property name="persistentClasses">
                <list>
                    <value>org.sakaiproject.iclicker.model.dao.ClickerRegistration</value>
                    <value>org.sakaiproject.iclicker.model.dao.ClickerLock</value>
                    <value>org.sakaiproject.iclicker.model.dao.ClickerUserKey</value>
                </list>
            </property>
        </bean>
    </property>
    <property name="transactionAttributes">
        <props>
            <prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
            <prop key="find*">PROPAGATION_REQUIRED,readOnly</prop>
            <prop key="count*">PROPAGATION_REQUIRED,readOnly</prop>
            <prop key="*">PROPAGATION_REQUIRED</prop>
        </props>
    </property>
</bean>

</beans>
